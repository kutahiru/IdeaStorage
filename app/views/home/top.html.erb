<header class="bg-white py-8 md:py-12">
  <div class="container mx-auto px-4 md:px-6 flex flex-col lg:flex-row lg:items-center lg:h-96">
    <div class="w-full lg:w-1/2 mb-8 lg:mb-0">
      <div class="max-w-lg mx-auto lg:mx-0">
        <div class="text-center lg:text-left space-y-2">
          <h1 class="text-3xl md:text-4xl font-bold text-gray-800 tracking-tight leading-tight">
            <span class="mr-10 block"><%= t('home.top.slogan_1') %></span>
            <span class="ml-10 block"><%= t('home.top.slogan_2') %></span>
          </h1>

          <p class="mt-6 text-gray-600 text-lg leading-relaxed">
            <%= t('home.top.description') %>
          </p>
        </div>
      </div>
    </div>

    <div class="w-full lg:w-1/2">
      <div class="h-64 md:h-80 lg:h-96 overflow-hidden rounded-xl shadow-lg">
        <%= image_tag "idea_helo.jpg", alt: t('home.top.idea_visualization'), class: "w-full h-full object-cover transform hover:scale-105 transition duration-500" %>
      </div>
    </div>
  </div>
</header>

<section class="bg-white py-12 md:py-16">
  <div class="container px-4 sm:px-6 mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-800">
        <%= t('home.top.manage_ideas') %>
      </h2>

      <div class="flex justify-center mt-4">
        <span class="inline-block w-32 sm:w-40 h-1.5 bg-blue-500 rounded-full"></span>
        <span class="inline-block w-3 h-1.5 mx-1 bg-blue-500 rounded-full"></span>
        <span class="inline-block w-1 h-1.5 bg-blue-500 rounded-full"></span>
      </div>

      <p class="mt-6 max-w-2xl mx-auto text-gray-600 text-lg">
        <%= t('home.top.features_description') %>
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:gap-10 md:grid-cols-2 lg:grid-cols-3">
      <div class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md transition duration-300 overflow-hidden group">
        <div class="p-6 sm:p-8">
          <div class="mb-5 flex justify-center">
            <%= image_tag "new_idea.png", alt: t('home.top.new_idea'), class: "h-40 object-contain transform group-hover:scale-105 transition duration-300" %>
          </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center"><%= t('home.top.crystallize_ideas') %></h3>
          <p class="text-gray-600 leading-relaxed text-center">
            <%= t('home.top.crystallize_description') %>
          </p>
        </div>
      </div>

      <div class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md transition duration-300 overflow-hidden group">
        <div class="p-6 sm:p-8">
          <div class="mb-5 flex justify-center">
            <%= image_tag "storming_idea.png", alt: t('home.top.brainstorming'), class: "h-40 object-contain transform group-hover:scale-105 transition duration-300" %>
          </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center"><%= t('home.top.visualize_thoughts') %></h3>
          <p class="text-gray-600 leading-relaxed text-center">
            <%= t('home.top.visualize_description') %>
          </p>
        </div>
      </div>

      <div class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md transition duration-300 overflow-hidden group">
        <div class="p-6 sm:p-8">
          <div class="mb-5 flex justify-center">
            <%= image_tag "discarded_idea.png", alt: t('home.top.organized_ideas'), class: "h-40 object-contain transform group-hover:scale-105 transition duration-300" %>
          </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center"><%= t('home.top.create_margin') %></h3>
          <p class="text-gray-600 leading-relaxed text-center">
            <%= t('home.top.create_margin_description') %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
