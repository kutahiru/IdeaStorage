<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="page current px-2 py-1 text-sm text-gray-500 rounded-md bg-blue-100/60">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, remote: remote, rel: page.rel, class: "page px-2 py-1 text-sm text-gray-500 rounded-md hover:bg-gray-100" %>
<% end %>